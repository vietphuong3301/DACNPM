@model DACNPM.Models.ProductType

@{
    ViewData["Title"] = "Edit Product Type";
}
<div class="section mt-5">
    <div class="container">
        <div class="card mb-4 mt-5">
            <div class="card-header">
                <i class="fas fa-shopping-cart"></i>
                <strong>@ViewBag.Title</strong>
            </div>
            <div class="card-body">

                <div class="row">
                    <div class="col-md-12 offset-1">
                        <form asp-controller="ProductTypes" asp-action="Edit" class="row g-3">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="TypeID" value="@Model.TypeID" />

                            <div class="col-md-5">
                                <div class="form-group mb-3">
                                    <label asp-for="Type" class="control-label"></label>
                                    <input asp-for="Type" class="form-control" />
                                    <span asp-validation-for="Type" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <a class="btn btn-secondary" asp-controller="ProductTypes" asp-action="Index">Show All</a>
                                    <input type="submit" value="Update" class="btn btn-success float-end" />
                                </div>


                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}